<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aaaa="http://schemas.android.com/apk/res-auto"
    xmlns:meinv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.www.android_text.MainActivity">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@mipmap/img"
               android:layout_marginBottom="50dp"
               />

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="60dp"
               app:cardBackgroundColor="#669900"
               app:cardElevation="3dp"
               app:cardCornerRadius="5dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_marginBottom="15dp"
               android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
               >

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="正常使用效果"
                   android:textColor="@android:color/white"
                   android:layout_margin="10dp"
                   android:textSize="24sp"
                   android:paddingLeft="120dp"
                   />


           </android.support.v7.widget.CardView>

       </RelativeLayout>

    <com.android.www.android_text.view.WaveView
        android:id="@+id/yuan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        />

    <com.android.www.android_text.view.BBBB
        android:id="@+id/bbbb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        aaaa:firstColor="@color/colorPrimaryDark"
        aaaa:secondColor="@color/colorAccent"
        android:layout_centerInParent="true"
        aaaa:circleWidth="30px"
        aaaa:speed="20"
        android:layout_below="@+id/yuan"
        />

    <com.android.www.android_text.view.MeiNv
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/yuan"
        meinv:MeiNv_firstColor="@android:color/holo_blue_light"
        meinv:MeiNv_secondColor="@android:color/holo_green_dark"
        meinv:MeiNv_ircleWidth="30px"
        meinv:dotCount="10"
        meinv:splitSize="30"
        meinv:bg="@mipmap/ic_launcher"
        >

    </com.android.www.android_text.view.MeiNv>

</RelativeLayout>
